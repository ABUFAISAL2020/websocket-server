{
    "name": "amphp/websocket-server",
    "homepage": "https://github.com/amphp/websocket-server",
    "description": "Websocket server for Amp's HTTP server.",
    "keywords": [
        "http",
        "server",
        "websocket"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Lowrey",
            "email": "rdlowrey@php.net"
        },
        {
            "name": "Bob Weinand"
        },
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        },
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "amphp/amp": "^2.0.3",
        "amphp/byte-stream": "^1.5",
        "amphp/http": "^1.2",
        "amphp/http-server": "v2.x-dev as 1.0",
        "amphp/socket": "dev-master as 1.0",
        "amphp/websocket": "socket-1.0-dev as 1.0"
    },
    "require-dev": {
        "amphp/http-client": "dev-master as 4.0",
        "amphp/http-server-static-content": "^1",
        "amphp/http-server-router": "^1.0.1",
        "amphp/log": "^1",
        "amphp/php-cs-fixer-config": "dev-master",
        "amphp/phpunit-util": "^1.1",
        "league/climate": "^3",
        "league/uri-schemes": "^1.1",
        "phpunit/phpunit": "^7",
        "infection/infection": "^0.9.3"
    },
    "suggest": {
        "ext-zlib": "Required for compression"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Websocket\\Server\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Websocket\\Server\\Test\\": "test"
        }
    },
    "config": {
        "platform": {
            "php": "7.1"
        }
    },
    "scripts": {
        "check": [
            "@code-style",
            "@test"
        ],
        "code-style": "php-cs-fixer fix -v --diff",
        "test": "@php -dzend.assertions=1 -dassert.exception=1 ./vendor/bin/phpunit --coverage-text"
    }
}
